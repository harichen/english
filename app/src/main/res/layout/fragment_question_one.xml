<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/exam_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/type1_stem_descption"
        style="@style/text_stem_descption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/type1_stem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/myradiogroup_question_one"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:text="23rlhlk"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/myradiogroup_question_one"
        android:layout_below="@+id/type1_stem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/image_bound"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/type1_opt_res1"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <RadioButton
                    android:id="@+id/type1_opt_cb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/answer_radiobutton"
                    android:text="A" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/image_bound"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/type1_opt_res2"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <RadioButton
                    android:id="@+id/type1_opt_cb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/answer_radiobutton"
                    android:text="B" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/image_bound"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/type1_opt_res3"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <RadioButton
                    android:id="@+id/type1_opt_cb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/answer_radiobutton"
                    android:text="C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/image_bound"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/type1_opt_res4"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <RadioButton
                    android:id="@+id/type1_opt_cb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/answer_radiobutton"
                    android:text="D" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>