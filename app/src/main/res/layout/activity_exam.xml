<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/question_background"
    android:orientation="vertical"
    tools:context=".ExamActivity" >

    <fragment
        android:id="@+id/frag_ques_title"
        android:name="com.happy.english.fragment.QuestionTitleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/question_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frag_ques_title"
        android:layout_marginBottom="60dp" >
    </FrameLayout>

    <fragment
        android:id="@+id/frag_ques_bottom"
        android:name="com.happy.english.fragment.QuestionBottomFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>