<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_background"
    tools:context=".UsActivity" >

   <Button
        android:id="@+id/iv_choice_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/btn_back_selectorr" />


   <ScrollView
       android:id="@+id/scrollView1"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true" >

         <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" >

       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:textSize="30sp"
           android:gravity="center"
           android:textColor="#232323"
           android:layout_marginBottom="15dp"
           android:text="制作人员" />

       <TextView
           android:id="@+id/tv_1"
           style="@style/tv_us"
           android:text="编辑：仲丽,子璇,小筱" 
           android:background="@drawable/bg_us_green"/>
       <TextView
           android:id="@+id/tv_2"
           style="@style/tv_us"
           android:text="美术：晴芳"
           android:background="@drawable/bg_us_yellow" />
       <TextView
           android:id="@+id/tv_3"
           style="@style/tv_us"
           android:text="策划：文翰"
           android:background="@drawable/bg_us_red" />
       <TextView
           android:id="@+id/tv_4"
           style="@style/tv_us"
           android:text="程序：里冲,建宏"
           android:background="@drawable/bg_us_purple" />
       <TextView
           android:id="@+id/tv_5"
           style="@style/tv_us"
           android:text="服务器 ：高星"
           android:background="@drawable/bg_us_light" />
       
   </LinearLayout>
   </ScrollView>

</RelativeLayout>