<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="8dp" >

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp" >

                <com.happy.english.support.lib.CircleProgressView
                    android:id="@+id/cp_listen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_listen"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_listen"
                    android:drawableTop="@drawable/icon_ab_listen"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="7.8"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="8dp" >

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp" >

                <com.happy.english.support.lib.CircleProgressView
                    android:id="@+id/cp_speak"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_speak"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_speak"
                    android:drawableTop="@drawable/icon_ab_speak"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="7.8"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="8dp" >

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp" >

                <com.happy.english.support.lib.CircleProgressView
                    android:id="@+id/cp_read"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_read"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_write"
                    android:drawableTop="@drawable/icon_ab_reading"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="8.0"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <com.happy.english.widget.TV
                android:id="@+id/tv_compent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.8"
                android:textColor="#232323"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合能力值"
                android:textColor="#232323"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical"
            android:padding="8dp" >

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp" >

                <com.happy.english.support.lib.CircleProgressView
                    android:id="@+id/cp_word"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_read"
                    android:drawableTop="@drawable/icon_ab_word"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:text="7.8"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>